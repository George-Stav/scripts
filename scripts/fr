#!/bin/sh

file=$(find -L \
	"$HOME/repos" \
	"$HOME/Packt" \
	"$HOME/.config" | fzf --reverse --height=40%)

# [ -z "$file" ] && exit
[ -z "$file" ] || [ ! -e "$file" ] && exit
# [ -z "$file" || ! -e "$file" ] && exit

case "$file" in
	*pdf)
		zathura --fork "$file" && exit
		;;
	*)
		cd "$(dirname "$file")" || return
		if [ -d "$file" ]; then ranger
		else nvim "$file"
		fi
		;;
esac
